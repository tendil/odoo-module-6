<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="library_book_view_tree" model="ir.ui.view">
        <field name="name">library.book.view.tree.inherit.school_lesson_6_4</field>
        <field name="model">library.book</field>
        <field name="inherit_id" ref="school_lesson_6_2.library_book_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="type" optional="show"/>
            </xpath>
        </field>
    </record>

    <record id="library_book_view_form" model="ir.ui.view">
        <field name="name">library.book.view.form.inherit.school_lesson_6_4</field>
        <field name="model">library.book</field>
        <field name="inherit_id" ref="school_lesson_6_2.library_book_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reader_id']" position="before">
                <field name="type" widget="radio" options="{'horizontal': true}"/>
            </xpath>
        </field>
    </record>

</odoo>
